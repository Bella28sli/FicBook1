<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FicBook.View.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:x1="clr-namespace:FicBook.ViewModel.Helpers"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:View="clr-namespace:FicBook.View" x:Class="FicBook.View.Pages.ReadAllPage"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="ReadAllPage">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding AllFicsView}" SelectedItem="{Binding SelectedFic, Mode=OneWayToSource}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            </ListBox>
        </ScrollViewer>
    </Grid>
</Page>
